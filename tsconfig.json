{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "src/**/*.ts",
    "main.ts",
    "vendor/obsidian-tasks/src/Config/Settings.ts",
    "vendor/obsidian-tasks/src/Config/StatusSettings.ts",
    "vendor/obsidian-tasks/src/Statuses/StatusConfiguration.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
